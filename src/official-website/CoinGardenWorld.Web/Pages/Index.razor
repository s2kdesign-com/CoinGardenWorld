        </div>
        <ul class="btn-grp justify-content-center justify-content-md-start">
            <li>
                <a href="@UrlConstants.MobileAppSite" target="_blank" class="btn btn-grad btn-round btn-md">
                    @Index_Resource.Get_the_app_now
                </a>
            </li>
            <li>
                <ul class="btn-grp gutter-15px">
                    <li><a href="@UrlConstants.MobileAppSite" target="_blank"><em class="fab fa-apple"></em></a></li>
                    <li><a href="@UrlConstants.MobileAppSite" target="_blank"><em class="fab fa-android"></em></a></li>
                    <li>
                        <a href="@UrlConstants.MobileAppSite" target="_blank">

                            <em class="fab fa-windows">
                            </em>
                        </a>
                    </li>
                </ul>
            </li>
        </ul>
    </Content>
</LargePanelRightPicture>

