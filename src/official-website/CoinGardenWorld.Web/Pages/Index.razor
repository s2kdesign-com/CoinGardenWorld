            <div class="row justify-content-center">

                <CenterCardIcon FeatureCardUrl="@UrlConstants.MobileAppSite" FeatureCardDelay="1.4" FeatureCardImageSrc="images/colorful_animated_picture_-_iphone_with_open_application.webp">
